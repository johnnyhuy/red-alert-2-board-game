<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import oosd.views.components.panes.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" minWidth="1200" type="GameWindowPane"
         xmlns="http://javafx.com/javafx/8" fx:controller="oosd.views.GamePresenter">
    <center>
        <BoardPane xmlns:fx="http://javafx.com/fxml/1" fx:id="board" minHeight="850">
        </BoardPane>
    </center>
    <right>
        <SidebarPane fx:id="sidebar" minWidth="255">
            <StackPane AnchorPane.topAnchor="6" AnchorPane.rightAnchor="0.0" AnchorPane.leftAnchor="0.0">
                <Text fx:id="playerTurn" fill="#FAFB32" style="-fx-font-weight: bold" layoutX="65" layoutY="20"/>
            </StackPane>
            <VBox AnchorPane.topAnchor="80" AnchorPane.rightAnchor="30" AnchorPane.leftAnchor="30">
                <Text fx:id="turnCount" fill="#FAFB32" style="-fx-font-weight: bold" layoutX="65" layoutY="20"/>
                <Text fx:id="playerOneWins" fill="#FAFB32" style="-fx-font-weight: bold" layoutX="65" layoutY="20"/>
                <Text fx:id="playerTwoWins" fill="#FAFB32" style="-fx-font-weight: bold" layoutX="65" layoutY="20"/>
            </VBox>
            <ScrollPane prefHeight="420" AnchorPane.topAnchor="355" AnchorPane.rightAnchor="50"
                        AnchorPane.leftAnchor="50" vbarPolicy="NEVER" hbarPolicy="NEVER">
                <VBox>
                    <Text fill="#FAFB32" wrappingWidth="150" text="TestTestTestTestTestTestTestTestTestTestTestTest"
                          style="-fx-font-weight: bold" layoutX="65" layoutY="20"/>
                </VBox>
            </ScrollPane>
        </SidebarPane>
    </right>
    <bottom>
        <ToolbarPane xmlns:fx="http://javafx.com/fxml/1" fx:id="toolbar" minHeight="50">
            <padding>
                <Insets top="13" right="30" bottom="15" left="60"/>
            </padding>
            <Button fx:id="defendButton" styleClass="toolbar-button">
                <tooltip>
                    <Tooltip text="Defend piece"/>
                </tooltip>
            </Button>
            <Button fx:id="undoButton" styleClass="toolbar-button">
                <tooltip>
                    <Tooltip text="Undo move"/>
                </tooltip>
            </Button>
            <Button fx:id="forfeitButton" styleClass="toolbar-button">
                <tooltip>
                    <Tooltip text="Forfeit game"/>
                </tooltip>
            </Button>
            <Button fx:id="saveGameButton" styleClass="toolbar-button">
                <tooltip>
                    <Tooltip text="Save game"/>
                </tooltip>
            </Button>
            <Button fx:id="restoreGameButton" styleClass="toolbar-button">
                <tooltip>
                    <Tooltip text="Restore game"/>
                </tooltip>
            </Button>
        </ToolbarPane>
    </bottom>
</fx:root>
