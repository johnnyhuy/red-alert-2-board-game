<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import oosd.views.components.panes.BoardPane?>
<?import oosd.views.components.panes.SidebarPane?>
<?import oosd.views.components.panes.ToolbarPane?>
<?import oosd.views.components.panes.WindowGridPane?>
<WindowGridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="windowGridPane">
    <center>
        <BoardPane xmlns:fx="http://javafx.com/fxml/1" fx:id="boardPane" minHeight="850">
        </BoardPane>
    </center>
    <right>
        <SidebarPane fx:id="sidebar" minWidth="255">
            <Text fx:id="playerTurn" fill="#FAFB32" style="-fx-font-weight: bold" textAlignment="CENTER" layoutX="65"
                  layoutY="20"/>
        </SidebarPane>
    </right>
    <bottom>
        <ToolbarPane xmlns:fx="http://javafx.com/fxml/1" fx:id="toolbar" minHeight="50">
            <padding>
                <Insets top="13" right="30" bottom="15" left="60"/>
            </padding>
            <Button fx:id="defendButton"/>
            <Button fx:id="undoButton"/>
        </ToolbarPane>
    </bottom>
</WindowGridPane>
