<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="windowGridPane">
    <center>
        <StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="boardPane" minHeight="850">
        </StackPane>
    </center>
    <right>
        <Pane fx:id="sidebar" minWidth="255">
            <Text fx:id="playerTurn" fill="#FAFB32" style="-fx-font-weight: bold" textAlignment="CENTER" layoutX="50" layoutY="338"/>
        </Pane>
    </right>
    <bottom>
        <HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="toolbar" minHeight="50">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Button text="Defend" onAction="#handleSubmitButtonAction"/>
        </HBox>
    </bottom>
</BorderPane>
