<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import oosd.views.components.panes.BoardPane?>
<?import oosd.views.components.panes.SidebarPane?>
<?import oosd.views.components.panes.ToolbarPane?>
<?import oosd.views.components.panes.WindowGridPane?>
<WindowGridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="windowGridPane">
    <center>
        <BoardPane xmlns:fx="http://javafx.com/fxml/1" fx:id="boardPane" minHeight="850">
        </BoardPane>
    </center>
    <right>
        <SidebarPane fx:id="sidebar" minWidth="255">
            <StackPane AnchorPane.topAnchor="6" AnchorPane.rightAnchor="0.0" AnchorPane.leftAnchor="0.0">
                <Text fx:id="playerTurn" fill="#FAFB32" style="-fx-font-weight: bold" layoutX="65" layoutY="20"/>
            </StackPane>
            <VBox AnchorPane.topAnchor="80" AnchorPane.rightAnchor="30" AnchorPane.leftAnchor="30">
                <Text fx:id="playerTurnCount" fill="#FAFB32" style="-fx-font-weight: bold" layoutX="65" layoutY="20"/>
            </VBox>
            <VBox AnchorPane.topAnchor="355" AnchorPane.rightAnchor="50" AnchorPane.leftAnchor="50">
                <Text fx:id="test" fill="#FAFB32" text="Test" style="-fx-font-weight: bold" layoutX="65" layoutY="20"/>
            </VBox>
        </SidebarPane>
    </right>
    <bottom>
        <ToolbarPane xmlns:fx="http://javafx.com/fxml/1" fx:id="toolbar" minHeight="50">
            <padding>
                <Insets top="13" right="30" bottom="15" left="60"/>
            </padding>
            <Button fx:id="defendButton">
                <tooltip>
                    <Tooltip text="Defend piece"/>
                </tooltip>
            </Button>
            <Button fx:id="undoButton">
                <tooltip>
                    <Tooltip text="Undo move"/>
                </tooltip>
            </Button>
        </ToolbarPane>
    </bottom>
</WindowGridPane>
