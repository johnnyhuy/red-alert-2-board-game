<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<Pane xmlns:fx="http://javafx.com/fxml" fx:id="windowGridPane">
    <BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="boardContainer">
        <center>
            <Pane xmlns:fx="http://javafx.com/fxml/1" fx:id="boardPane">
                <BorderPane.margin>
                     <Insets left="180.0" top="60.0" />
                </BorderPane.margin>
            </Pane>
        </center>
        <bottom>
            <HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="toolbar">
                <Button text="Defend" />
            </HBox>
        </bottom>
    </BorderPane>
    <Pane fx:id="sidebar" layoutX="1000" layoutY="337">
        <Text fx:id="playerTurn" fill="#FAFB32" style="-fx-font-weight: bold" textAlignment="CENTER"/>
    </Pane>
</Pane>
